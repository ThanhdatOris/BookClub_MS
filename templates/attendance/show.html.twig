{% extends 'base.html.twig' %}

{% block title %}Attendance{% endblock %}

{% block body %}
    <h1>Attendance</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ attendance.id }}</td>
            </tr>
            <tr>
                <th>Checked_in</th>
                <td>{{ attendance.checkedIn ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Checked_in_time</th>
                <td>{{ attendance.checkedInTime ? attendance.checkedInTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Remarks</th>
                <td>{{ attendance.remarks }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_attendance_index') }}">back to list</a>

    <a href="{{ path('app_attendance_edit', {'id': attendance.id}) }}">edit</a>

    {{ include('attendance/_delete_form.html.twig') }}
{% endblock %}
