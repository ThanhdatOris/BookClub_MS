{% extends 'base.html.twig' %}

{% block title %}Activities{% endblock %}

{% block body %}
    <h1>Activities</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ activity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ activity.date ? activity.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ activity.time ? activity.time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ activity.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_activities_index') }}">back to list</a>

    <a href="{{ path('app_activities_edit', {'id': activity.id}) }}">edit</a>

    {{ include('activities/_delete_form.html.twig') }}
{% endblock %}
