{% extends 'base.html.twig' %}

{% block title %}Members index{% endblock %}

{% block body %}
    <h1>Members index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Student_id</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Join_date</th>
                <th>Birth_day</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td>{{ member.name }}</td>
                <td>{{ member.studentId }}</td>
                <td>{{ member.email }}</td>
                <td>{{ member.phone }}</td>
                <td>{{ member.joinDate ? member.joinDate|date('Y-m-d') : '' }}</td>
                <td>{{ member.birthDay ? member.birthDay|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_members_show', {'id': member.id}) }}">show</a>
                    <a href="{{ path('app_members_edit', {'id': member.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_members_new') }}">Create new</a>
{% endblock %}
