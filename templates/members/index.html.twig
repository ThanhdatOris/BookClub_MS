{% extends 'base.html.twig' %}

{% block title %}Quản lý thành viên{% endblock %}

{% block body %}
<main class="main-content position-relative border-radius-lg">
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6>Danh sách thành viên</h6>
                    </div>
                    <div class="card-body px-4 pt-0 pb-2"> <!-- Thêm lớp px-3 để tạo khoảng trống -->
                        <div class="table-responsive">
                            <table id="membersTable" class="table align-items-center mb-0">
                                <thead class="sticky-top bg-white">
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">STT</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Họ và tên</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">MSSV</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Email</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Số điện thoại</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Khoa</th>
                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ngày tham gia</th>
                                        <th class="text-secondary text-xxs font-weight-bolder opacity-7">Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Data will be populated by DataTables -->
                                </tbody>
                            </table>
                        </div>
                        <a href="{{ path('app_members_new') }}" class="btn btn-primary px-3 mt-3">Create new</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- DataTables CSS -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>

<!-- DataTables JS -->
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

<script>
$(document).ready(function() {
    if (!$.fn.DataTable.isDataTable('#membersTable')) {
        $('#membersTable').DataTable({
            "ajax": "{{ path('app_members_index') }}",
            "columns": [
                { "data": "id" },
                { "data": "fullname" },
                { "data": "student_id" },
                { "data": "email" },
                { "data": "phone" },
                { "data": "faculty" },
                { "data": "join_date", "className": "text-center" },
                {
                    "data": null,
                    "className": "align-middle",
                    "render": function(data, type, row) {
                        return '<a href="{{ path('app_members_show', {'id': 'ID_PLACEHOLDER'}) }}" class="btn btn-primary btn-sm">Show</a> ' +
                                '<a href="{{ path('app_members_edit', {'id': 'ID_PLACEHOLDER'}) }}" class="btn btn-secondary btn-sm">Edit</a>'.replace(/ID_PLACEHOLDER/g, row.id);
                    }
                }
            ],
            "scrollX": true,
            "autoWidth": false,
            "order": [[0, "asc"]]
        });
    }
});
</script>
{% endblock %}