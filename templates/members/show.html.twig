{% extends 'base.html.twig' %}

{% block title %}Members{% endblock %}

{% block body %}
    <h1>Members</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Fullname</th>
                <td>{{ member.fullname }}</td>
            </tr>
            <tr>
                <th>Student_id</th>
                <td>{{ member.studentId }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ member.email }}</td>
            </tr>
            <tr>
                <th>Phone_num</th>
                <td>{{ member.phoneNum }}</td>
            </tr>
            <tr>
                <th>Join_date</th>
                <td>{{ member.joinDate ? member.joinDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>
                <td>{{ member.birthDate ? member.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Classes</th>
                <td>{{ member.Classes }}</td>
            </tr>
            <tr>
                <th>Faculty</th>
                <td>{{ member.Faculty }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_members_index') }}">back to list</a>

    <a href="{{ path('app_members_edit', {'id': member.id}) }}">edit</a>

    {{ include('members/_delete_form.html.twig') }}
{% endblock %}
